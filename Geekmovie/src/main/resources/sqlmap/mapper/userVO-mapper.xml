<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userVO">
	
	<!-- insert 회원가입 -->
	<insert id="insertVO" parameterType="userVO">
		<![CDATA[
			insert into users(id, password, name, gender)
			values (#{id},#{password},#{name},#{gender});	
		]]>	
	</insert>
	
	<!-- 아이디 중복 체크 -->
	<select id="idCheck" parameterType="String" resultType="int">
		<![CDATA[
			select count(id) from users where id = #{id}	
		]]>
	</select>
	
	<!-- 회원 로그인 체크 -->
	<select id="loginCheck" resultType="String">
		<![CDATA[
			select id from users where id = #{id} and password = #{password}
		]]>
	</select>
	
	<!-- 회원 로그인 정보 -->
	<select id="viewMember" resultType="userVO">
		<![CDATA[
			select id,name,gender from users where id = #{id} and password = #{password};		
		]]>
	</select>
	<!-- 리스트로 목록보기 -->
	<select id="userInfo">
		<![CDATA[
			select * from user
		]]>
	</select>
	
</mapper>